
@{
    ViewBag.Title = "ResetPassword";
}

@using (Html.BeginForm("PasswordChangeResults", "Home", FormMethod.Post, new { id = "ChangePassForm" }))
{
    <div style="text-align:center;">
        New Password <input type="password" name="NewPassword" id="NewPassword" class="form-control GLOFieldSpacing" style="width:30%;" tabindex="1" />
        <br />
        Confirm Password <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control GLOFieldSpacing" style="width: 30%;" onblur="VerifyPasses()" tabindex="2" />
        <br />
        <input type="button" value="Change Password" class="form-control GLOFieldSpacing" style="width:40%;" id="submitpass" tabindex="3" onclick="SubmitForm()" />
    </div>
}

<script>
    function VerifyPasses() {
        var x = document.getElementById('NewPassword').value;
        var y = document.getElementById('ConfirmPassword').value;
        var z = document.getElementById('submitpass');
        if (x == "Password1" && y == "Password1") {
            alert("Please select a different password");
            return "false";
        }
        if (x != y) {
            alert("Passwords do not match!");
            return "false";
        }
        return "true";
    }

    function SubmitForm() {
        var x = document.getElementById('ChangePassForm');
        var y = VerifyPasses();
        if (y == "true") {
            x.submit();
        }
    }
</script>