@{
    ViewBag.Title = "Home Page";
}
<br />
<div class="row">
    <div class="col-md-5">
        <h4 style="text-align:center;">Entry Fields</h4>
        <span>Companies</span>
        <select name="CompanySelect" id="CompanySelect" style="width:75%;">
            <option value="Company1">Company 1</option>
            <option value="Company2">Company 2</option>
            <option value="Company3">Company 3</option>
            <option value="Company4">Company 4</option>
            <option value="Company5">Company 5</option>
        </select>
        <br />
        <br />
        <input type="button" value="Go" class="form-control" style="width:50%; margin:0 auto;" />
        <br />
        <br />
        <div style="text-align:center;">
            <p style="text-align:left;">Priority</p>
            <select size="10" style="width: 75%;"></select>
        </div>
        <br />
        <br />
        <input type="button" value="Refresh" class="form-control" style="width:50%; margin:0 auto;" />
        <br />
        <br />
        <div style="border:1px solid blue;padding:5px;">
            <p>Company Information</p>
            <span>Company</span>&nbsp;&nbsp;<input type="text" name="CompanyName" style="width:100%; border-radius:5px;" /> <br /><br />
            <span>Filename</span>&nbsp;&nbsp;<input type="text" name="Filename" style="width: 100%; border-radius: 5px;" /><br /><br />
            <span>MIS</span>&nbsp;&nbsp;<input type="text" name="CompanyMIS" style="width: 100%; border-radius: 5px;" /><br /><br />
        </div>

        <br />
        <br />

        <div style="border:1px solid blue; padding: 5px;">
            <span>Manufacturer</span>&nbsp;&nbsp;<input type="text" name="Manufacturer" style="width: 100%; border-radius: 5px;" /><br />
            <span>Product Name</span>&nbsp;&nbsp;<input type="text" name="ProductName" style="width: 100%; border-radius: 5px;" /><br />
            <span>Product Number</span>&nbsp;&nbsp;<input type="text" name="ProductNumber" style="width: 100%; border-radius: 5px;" /><br />
            <span>Date</span>&nbsp;&nbsp;<input type="text" name="Date" style="width: 100%; border-radius: 5px;" /><br />
            <span>Language</span>&nbsp;&nbsp;<input type="text" name="Language" style="width: 100%; border-radius: 5px;" /><br />
            <span>Location</span>&nbsp;&nbsp;<input type="text" name="Location" style="width: 100%; border-radius: 5px;" /><br />
            <span>Department</span>&nbsp;&nbsp;<input type="text" name="Department" style="width: 100%; border-radius: 5px;" /><br />
            <span>Common Name</span>&nbsp;&nbsp;<input type="text" name="CommonName" style="width: 100%; border-radius: 5px;" /><br />
        </div>

        <br />
        <br />

        <input type="button" value="Ok" style="width:25%;" /> &nbsp;&nbsp;&nbsp;&nbsp;
        <input type="button" value="Next" style="width:25%;" />

        <br />
        <br />

    </div>
    <div class="col-md-7" style="border: 1px solid black; float:right;">
        <h4 style="text-align:center;">MSDS Document</h4>

        <div id="PDFHolder" name="PDFHolder" style="position:fixed;">
            <p>THIS IS WHERE THE PDF WILL BE HOUSED AND MOVE WITH THE SCROLL OF THE PAGE.</p>
        </div>

    </div>
</div>